<h1>Home</h1>

    <% postsVar.forEach( post =>{ %>

        <% let link = "/posts/" + post._id %> 

        <h1>

            <%= post.title %>

        </h1>

        <p>

            <%= post.text.substring(0,100); %>...

            <a href= 
            
                <%= link %>
            
            >Read More</a>

        </p> 

    <% }) %>

