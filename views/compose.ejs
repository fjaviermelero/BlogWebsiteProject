<h1>Compose</h1>

<form action="/compose" method="post" class="form-group">

    <div class="form-group">
      <label for="composeTitle">Title</label>
      <input type="text" class="form-control" name="composeTitle" id="composeTitle">
    </div>

    <div class="form-group">
      <label for="composeText">Text</label>
      <textarea class="form-control" name="composeText" id="composeText" rows="5"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" name ="button" value="Publish" class="btn btn-primary">
    </div>

</form>

